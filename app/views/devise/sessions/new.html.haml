.single-container 
  %header.signup-header
    %h1
      = link_to root_path do
        = image_tag asset_path('material/logo/logo.png')
  %main.signup-main
    .signup-main__login-panel
      .signup-main__login-no-account
        %p アカウントをお持ちでない方はこちら
        = link_to '/users/sign_up/' do
          新規会員登録
      .signup-main__login-form-inner
        %button.signup-main__btn-default.signup-main__btn-sns.signup-main__btn-sns--facebook{ id: 'facebook-login' }
          = icon 'fab', 'facebook-square'
          Facebookでログイン
        %button.signup-main__btn-default.signup-main__btn-sns.signup-main__btn-sns--google{ id: 'google-login' }
          Googleでログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .signup-main__login-form-inner
          .signup-main__form-group
            = f.label :メールアドレス
            = f.email_field :email,{ class: 'signup-main__input-default', placeholder: 'PC・携帯どちらでも可' }
          .signup-main__form-group
            = f.label :パスワード
            = f.password_field :password, { class: 'signup-main__input-default', placeholder: '7文字以上' }
          %button.signup-main__login-submit.signup-main__btn-default.signup-main__btn-red{ type: 'submit' }
            = f.submit "ログイン", class: "signup-main__btn-default signup-main__btn-red"
       
          .signup-main__form-group
            = f.check_box :remember_me
            = f.label :パスワードをお忘れの方
  = render "devise/registrations/footer"

