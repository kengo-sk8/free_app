
%header.pcheader
  .pcheader__inner
    .pcheader__inner__mainheader
      .pcheader__inner__mainheader__furimalogo
        = link_to root_path do
          = image_tag "/assets/material/logo/logo.png"
      .searchBox
        %form{action: "#", method: "get"}
          %input{name: "utf8", type: "hidden", value: "✓"}
          %input#searchInput.searchBox--input{name: "key", placeholder: "キーワードから探す"}
          %button{type: "submit"}
            .searchBox__icon
              %img{src: "/assets/material/icon/icon-search 1.png"}
          %input{name: "authenticity_token", type: "hidden", value: "#"}
    .nav
      %ul.nav__listsleft
        %li
          = link_to "カテゴリー"
        %li.listsleft__item
          = link_to "ブランド"
      %ul.nav__listsright
        %li.listsRight__item
          = link_to "ログイン"
        %li.listsRight__item
          = link_to "新規会員登録"
